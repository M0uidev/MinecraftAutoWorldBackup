<Window x:Class="MinecraftWorldBackup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MinecraftWorldBackup"
        Title="Minecraft World Backup" 
        Icon="Assets/Bedrock.ico"
        Height="600" Width="450"
        MinHeight="400" MinWidth="350"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing"
        Background="#1a1a2e">
    
    <Window.Resources>
        <!-- Bool to Visibility Converter -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#16213e"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0f3460"/>
        <SolidColorBrush x:Key="HighlightColor" Color="#e94560"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#a0a0a0"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4ade80"/>
        <SolidColorBrush x:Key="WarningColor" Color="#fbbf24"/>
        
        <!-- TreeView Item Style -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>
        
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HighlightColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <Image Source="Assets/Iron Pickaxe.png" Width="28" Height="28" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="Minecraft World Backup" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
            <TextBlock x:Name="StatusText" 
                       Text="Select worlds to protect" 
                       FontSize="13" 
                       Foreground="{StaticResource TextSecondary}"
                       Margin="0,4,0,0"/>
            
            <!-- Progress Bar (hidden by default) -->
            <Border x:Name="ProgressPanel" 
                    Visibility="Collapsed"
                    Background="{StaticResource SecondaryBg}"
                    CornerRadius="6"
                    Padding="12,8"
                    Margin="0,12,0,0">
                <StackPanel>
                    <Grid Margin="0,0,0,6">
                        <TextBlock x:Name="ProgressWorldName" 
                                   Text="Backing up..." 
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock x:Name="ProgressPercent"
                                   Text="0%"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondary}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:Name="BackupProgressBar"
                                 Height="8"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Foreground="{StaticResource HighlightColor}"
                                 Background="{StaticResource AccentColor}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- World TreeView -->
        <Border Grid.Row="1" 
                Background="{StaticResource SecondaryBg}" 
                CornerRadius="8"
                Padding="8">
            <TreeView x:Name="WorldsTreeView" 
                      Background="Transparent" 
                      BorderThickness="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Worlds}">
                        <!-- Instance Header -->
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="📁" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Name}" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextPrimary}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Worlds.Count, StringFormat=' ({0} worlds)'}" 
                                       Foreground="{StaticResource TextSecondary}"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                        
                        <!-- World Items -->
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <CheckBox Grid.Column="0" 
                                              Grid.RowSpan="2"
                                              IsChecked="{Binding IsSelectedForBackup}" 
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0"
                                              Checked="WorldCheckBox_Changed"
                                              Unchecked="WorldCheckBox_Changed"/>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="🌍" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding SizeDisplay}" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                        <TextBlock Text=" • " Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                                        <TextBlock Text="{Binding LastPlayedDateTime, StringFormat='Last played: {0:MMM d, yyyy}'}" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2" 
                                            Grid.RowSpan="2"
                                            Content="Backup"
                                            Tag="{Binding}"
                                            Click="BackupWorld_Click"
                                            Padding="12,6"
                                            FontSize="11"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding IsSelectedForBackup, Converter={StaticResource BoolToVisibility}}"/>
                                </Grid>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Border>

        <!-- Info Panel -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryBg}" 
                CornerRadius="8"
                Padding="12"
                Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="SelectedCountText" 
                               Text="0 worlds selected for backup" 
                               FontSize="13"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock x:Name="NextScanText" 
                               Text="Next scan in: --:--" 
                               FontSize="11"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Content="🔄" Click="Refresh_Click" Padding="10,8" ToolTip="Refresh"/>
                    <Button x:Name="SettingsButton" Content="⚙️" Click="Settings_Click" Padding="10,8" ToolTip="Settings" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="BackupAllButton" 
                    Grid.Column="0" 
                    Click="BackupAll_Click"
                    Margin="0,0,6,0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Assets/Bedrock.png" Width="16" Height="16" Margin="0,0,6,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="Backup All" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Backup Destination Selector -->
            <Border Grid.Column="1" 
                    Background="{StaticResource SecondaryBg}" 
                    CornerRadius="6" 
                    Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="BackupLocalCheckBox" 
                              Content="💾" 
                              IsChecked="True"
                              ToolTip="Save to Local"
                              Checked="BackupDestination_Changed"
                              Unchecked="BackupDestination_Changed"
                              Foreground="{StaticResource TextPrimary}"
                              VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="BackupDriveCheckBox" 
                              Content="☁️" 
                              IsChecked="False"
                              ToolTip="Sync to Google Drive"
                              Checked="BackupDestination_Changed"
                              Unchecked="BackupDestination_Changed"
                              Foreground="{StaticResource TextPrimary}"
                              VerticalContentAlignment="Center"
                              Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
            
            <Button x:Name="MinimizeToTrayButton" 
                    Grid.Column="2" 
                    Content="📥 Minimize" 
                    Click="MinimizeToTray_Click"
                    Margin="6,0,0,0"
                    Background="{StaticResource SecondaryBg}"/>
        </Grid>
    </Grid>
</Window>
